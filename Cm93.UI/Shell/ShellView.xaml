<Window x:Class="Cm93.UI.Shell.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro"
        Title="Cm93" Height="600" Width="960">
    <Grid Background="{StaticResource GreyToBlackDiagonal}">
		<Grid.Resources>
			<BooleanToVisibilityConverter x:Key="BoolVisible" />
		</Grid.Resources>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="6*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"/>
			<ColumnDefinition Width="6*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>

		<ContentControl Grid.Row="1" Grid.Column="1" cal:View.Model="{Binding ActiveItem}" />
		
		<Button Grid.Row="2" Grid.Column="0" Visibility="{Binding VisibleHome, Converter={StaticResource BoolVisible}}" Margin="5" Content="Home" x:Name="Home" />

	</Grid>
</Window>
